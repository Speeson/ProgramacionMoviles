<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_primary"
    android:padding="24dp"
    tools:context=".FormularioActivity">

    <!-- ScrollView para que el contenido sea desplazable -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTituloFormulario"
                style="@style/TituloGrande"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/formulario_contacto" />

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/tvSubtituloFormulario"
                style="@style/TextoNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="@string/subtitulo_formulario" />

            <!-- Card del formulario -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/text_primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Campo Nombre -->
                    <TextView
                        style="@style/TextoEtiqueta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nombre" />

                    <EditText
                        android:id="@+id/etNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/hint_nombre"
                        android:inputType="textPersonName"
                        android:padding="12dp"
                        android:background="@color/input_background"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary" />

                    <!-- Campo Correo -->
                    <TextView
                        style="@style/TextoEtiqueta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/correo" />

                    <EditText
                        android:id="@+id/etCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/hint_correo"
                        android:inputType="textEmailAddress"
                        android:padding="12dp"
                        android:background="@color/input_background"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary" />

                    <!-- Campo Mensaje -->
                    <TextView
                        style="@style/TextoEtiqueta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/mensaje" />

                    <EditText
                        android:id="@+id/etMensaje"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/hint_mensaje"
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:padding="12dp"
                        android:background="@color/input_background"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary" />

                    <!-- Botón Enviar -->
                    <Button
                        android:id="@+id/btnEnviar"
                        style="@style/BotonPrimario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/enviar" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- TextView de confirmación -->
            <TextView
                android:id="@+id/tvConfirmacion"
                style="@style/TextoConfirmacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:padding="16dp"
                android:background="@color/success_background"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="✓ Datos recibidos correctamente:\n\nNombre: Esteban\nCorreo: juan@example.com\nMensaje: Hola" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>