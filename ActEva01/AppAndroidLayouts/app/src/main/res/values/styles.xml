<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo base de la aplicaciÃ³n -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Estilos de texto -->
    <style name="TituloGrande">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextoNormal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextoNormal2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/card_background</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextoEtiqueta">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextoValor">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextoConfirmacion">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_success</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Estilos de botones -->
    <style name="BotonPrimario" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>